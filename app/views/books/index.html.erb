  <%= render 'list', books: @books %>

  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
          <th></th>
          <th>Title:<%= book.title %></th>
          <th>Opinion:<%= book.body %></th>
          <th colspan="3"></th>
          <th><%= image_tag book.user.get_profile_image(100,100) %></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
  </div>






  <h2 class="mt-3">New book</h2>
  <%= form_with(model: @book, local: true) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>

