<h2>User info</h2>
  <% if user.image.attached? %>
  <%= image_tag user.image, size: "300x300" %>
  <% else %>
  <%= image_tag 'no_image', size: "300x300" %>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-md-4">
      </div>
      <table class="table">
        <tbody>
          <tr>
          </tr>
          <tr>
            <th>name</th>
	          <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
   <%= link_to '', user_edit_path, class: "btn btn-secondary" %>
  </div>