
<% if @user.errors.any? %>
<%= @user.errors.count %>error
<ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with(model:@user, local: true, method: :patch) do |f| %>
        <label for="user_name">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"user_name" %><br>
        <label for="user_image">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
        <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus:true, id:"user_introduction", maxlength: "50" %><br>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>